<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>EscapeRoom</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>semi.common.filter.EncodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <description>-----jsp연결-----</description>
  <description>-----필터-----</description>
  <description>-----jsp연결 : Member-----</description>
  <servlet>
    <servlet-name>MemberLoginServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberLoginServlet</servlet-name>
    <url-pattern>/member/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MemberUpdatePasswordServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/updatePassword.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberUpdatePasswordServlet</servlet-name>
    <url-pattern>/member/updatePassword</url-pattern>
  </servlet-mapping>
  <description>-----jsp연결 : Home, Notice-----</description>
  <servlet>
    <servlet-name>gotoHome</servlet-name>
    <jsp-file>/WEB-INF/views/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>gotoHome</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>gotoNoticeForm</servlet-name>
    <jsp-file>/WEB-INF/views/notice/noticeForm.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>gotoNoticeForm</servlet-name>
    <url-pattern>/notice/noticeForm</url-pattern>
  </servlet-mapping>
</web-app>